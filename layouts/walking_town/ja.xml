<layouts>
	<layout name="root">
		<row>
			<button type="voicerec" icon="voice_32x32" />
			<button type="picture" icon="camera_32x32" />
			<button type="textnote" icon="text_32x32" />
		</row>
		
		<row>
			<button type="page" label="コンビニ..." targetlayout="convenience store" />
			<button type="page" label="歩道..." targetlayout="歩道"/>
			<button type="page" label="塀..." targetlayout="塀" />
		</row>
		<row>
            <button type="page" label="橋..." targetlayout="橋" icon="walking_town_icons/button_way_bridge.png" />
			<button type="tag" label="病院" icon="walking_town_icons/button_amenity_doctors.png" />
            <button type="tag" label="ベンチ" icon="walking_town_icons/button_misc_bench.png" />
		</row>
		<row>
			<button type="tag" label="自販機" />
			<button type="tag" label="災害対応自販機" />
		</row>
	</layout>

    <!-- convenience store -->
    <layout name="convenience store">
        <row>
            <button type="tag" label="セーフティステーション" />
            <button type="tag" label="災害時帰宅支援ステーション" />
        </row>
        <row>
            <button type="tag" label="ATM" />
            <button type="tag" label="AED" />
            <button type="tag" label="トイレ" icon="walking_town_icons/button_misc_toilets.png" />
        </row>
        <row>
            <button type="tag" label="FreeWiFi" />
            <button type="textnote" label="Text note" icon="text.png" />
        </row>
    </layout>

    <!-- 歩道 -->
    <layout name="歩道">
        <row>
            <button type="tag" label="歩道開始" />
            <button type="tag" label="歩道終了" />
            <button type="tag" label="歩道なし" />
        </row>
        <row>
            <button type="tag" label="幅1m未満" />
            <button type="tag" label="幅1m以上" />
        </row>
        <row>
            <button type="tag" label="段差1㎝未満" />
            <button type="tag" label="段差1㎝以上" />
        </row>
        <row>
            <button type="tag" label="未舗装" />
            <button type="picture" icon="camera_32x32" />
            <button type="textnote" label="Text note" icon="text.png" />
        </row>
    </layout>

    <!-- 塀 -->
    <layout name="塀">
        <row>
            <button type="tag" label="ブロック塀開始" />
            <button type="tag" label="ブロック塀終了" />
        </row>
        <row>
            <button type="tag" label="石塀開始" />
            <button type="tag" label="石塀終了" />
        </row>
        <row>
            <button type="tag" label="高さ0.5m未満" />
            <button type="tag" label="高さ0.5～1m" />
            <button type="tag" label="高さ1m以上" />
        </row>
        <row>
            <button type="picture" icon="camera_32x32" />
            <button type="textnote" label="Text note" icon="text.png" />
        </row>
    </layout>

    <!-- 橋 -->
    <layout name="橋">
        <row>
            <button type="tag" label="橋開始" icon="walking_town_icons/button_way_bridge.png" />
            <button type="tag" label="橋終了" icon="walking_town_icons/button_way_bridge.png" />
        </row>
        <row>
            <button type="picture" icon="camera_32x32" />
            <button type="textnote" label="Text note" icon="text.png" />
        </row>
    </layout>
</layouts>
